@{
    var userId   = Context.Session.GetInt32("UserId");
    // Если значение в сессии не задано, подставляем пустую строку
    var username = Context.Session.GetString("Username") ?? "";
}
<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"] - TenderService</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
      <a class="navbar-brand" asp-page="/Index">TenderService</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navMenu">
        <ul class="navbar-nav ms-auto">
          @if (userId != null)
          {
            <li class="nav-item nav-link text-light">Привет, <strong>@username</strong>!</li>
            <li class="nav-item"><a class="nav-link" asp-page="/Tenders/Index">Все тендеры</a></li>
            <li class="nav-item"><a class="nav-link" asp-page="/Tenders/My">Мои тендеры</a></li>
            <li class="nav-item"><a class="nav-link" asp-page="/Account/Logout">Выход</a></li>
          }
          else
          {
            <li class="nav-item"><a class="nav-link" asp-page="/Account/Login">Вход</a></li>
            <li class="nav-item"><a class="nav-link" asp-page="/Account/Register">Регистрация</a></li>
          }
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-5">
    <main>@RenderBody()</main>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>
