@page
@model InternetTenderService.Pages.Tenders.MyModel
@{
    ViewData["Title"] = "Мои тендеры";
}
<h2>Мои тендеры</h2>
<a asp-page="Create" class="btn btn-success mb-3">Новый тендер</a>
<div class="row row-cols-1 row-cols-md-2 g-4">
  @foreach (var t in Model.MyTenders)
  {
    <div class="col">
      <div class="card tender-card h-100">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">@t.Title</h5>
          <p class="card-text flex-grow-1">@t.Description?.Substring(0, Math.Min(t.Description.Length,100))...</p>
          <p class="text-muted small">Создано: @t.CreatedAt.ToLocalTime().ToString("g")</p>
          <div class="mt-auto">
            <a asp-page="Details" asp-route-id="@t.Id" class="btn btn-primary me-1">Детали</a>
            <a asp-page="Edit" asp-route-id="@t.Id" class="btn btn-warning me-1">Изменить</a>
            <a asp-page="Delete" asp-route-id="@t.Id" class="btn btn-danger">Удалить</a>
          </div>
        </div>
      </div>
    </div>
  }
</div>